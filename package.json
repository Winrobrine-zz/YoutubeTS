{
    "name": "youtubets",
    "version": "1.0.0",
    "description": "Cloning Youtube with TypeScript and NodeJS",
    "repository": {
        "type": "git",
        "url": "https://github.com/Winrobrine/YoutubeTS"
    },
    "author": "Winrobrine",
    "license": "MIT",
    "scripts": {
        "start": "node dist/server.js",
        "build": "npm run build-scss && npm run build-ts && npm run copy-static-assets",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Scss,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" npm:watch-scss npm:watch-ts npm:watch-node",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "build-scss": "node-sass src/public/scss/main.scss dist/public/css/main.css",
        "watch-scss": "node-sass -w src/public/scss/main.scss dist/public/css/main.css",
        "copy-static-assets": "ts-node copyStaticAssets.ts"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "connect-mongo": "^3.0.0",
        "dotenv": "^8.1.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-session": "^1.16.2",
        "express-validator": "^6.1.1",
        "helmet": "^3.20.0",
        "mongoose": "^5.6.9",
        "morgan": "^1.9.1",
        "multer": "^1.4.2",
        "multer-blob-storage": "^1.0.3",
        "passport": "^0.4.0",
        "passport-github": "^1.1.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-local": "^1.0.0",
        "passport-local-mongoose": "^5.0.1",
        "pug": "^2.0.4",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.1",
        "@types/connect-mongo": "0.0.43",
        "@types/dotenv": "^6.1.1",
        "@types/errorhandler": "0.0.32",
        "@types/express": "^4.17.1",
        "@types/express-session": "^1.15.14",
        "@types/helmet": "0.0.43",
        "@types/mongoose": "^5.5.12",
        "@types/morgan": "^1.7.37",
        "@types/multer": "^1.3.9",
        "@types/passport": "^1.0.0",
        "@types/passport-github": "^1.1.5",
        "@types/passport-google-oauth20": "^2.0.2",
        "@types/passport-local": "^1.0.33",
        "@types/passport-local-mongoose": "^4.0.12",
        "@types/shelljs": "^0.8.5",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.0.0",
        "@typescript-eslint/parser": "^2.0.0",
        "node-sass": "^4.12.0",
        "nodemon": "^1.19.1",
        "shelljs": "^0.8.3"
    }
}
