{
    "name": "youtubets",
    "version": "1.0.0",
    "description": "Cloning Youtube with TypeScript and NodeJS",
    "repository": {
        "type": "git",
        "url": "https://github.com/Winrobrine/YoutubeTS"
    },
    "author": "Winrobrine",
    "license": "MIT",
    "scripts": {
        "start": "node dist/server.js",
        "build": "npm run build-ts",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "helmet": "^3.20.0",
        "morgan": "^1.9.1",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.0",
        "@types/errorhandler": "0.0.32",
        "@types/express": "^4.17.0",
        "@types/helmet": "0.0.43",
        "@types/morgan": "^1.7.36",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.0.0",
        "@typescript-eslint/parser": "^2.0.0",
        "eslint": "^6.1.0",
        "nodemon": "^1.19.1"
    }
}
