{
    "name": "youtubets",
    "version": "1.0.0",
    "description": "Cloning Youtube with TypeScript and NodeJS",
    "repository": {
        "type": "git",
        "url": "https://github.com/Winrobrine/YoutubeTS"
    },
    "author": "Winrobrine",
    "license": "MIT",
    "scripts": {
        "start": "node dist/server.js",
        "watch:node": "wait-on dist/server.js && nodemon dist/server.js",
        "clean": "ts-node clean.ts",
        "build": "npm run build:assets && npm run build:server",
        "prebuild": "npm run clean",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Webpack,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" npm:watch:assets npm:watch:server npm:watch:node",
        "prewatch": "npm run clean",
        "build:server": "npm run build:types && npm run build:ts",
        "watch:server": "concurrently -k \"npm:watch:types\" \"npm:watch:ts\"",
        "build:types": "tsc --emitDeclarationOnly",
        "watch:types": "tsc -w --emitDeclarationOnly",
        "build:ts": "babel src --out-dir dist --ignore \"src/public\" --extensions \".ts\" --source-maps inline",
        "watch:ts": "babel src -w --out-dir dist --ignore \"src/public\" --extensions \".ts\" --source-maps inline",
        "build:assets": "webpack --mode=production",
        "watch:assets": "webpack -w --mode=development"
    },
    "dependencies": {
        "@babel/polyfill": "^7.4.4",
        "body-parser": "^1.19.0",
        "connect-ensure-login": "^0.1.1",
        "connect-mongo": "^3.0.0",
        "dotenv": "^8.1.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-session": "^1.16.2",
        "express-validator": "^6.1.1",
        "helmet": "^3.20.0",
        "mongoose": "^5.6.10",
        "morgan": "^1.9.1",
        "multer": "^1.4.2",
        "multer-blob-storage": "^1.0.3",
        "passport": "^0.4.0",
        "passport-github": "^1.1.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-local": "^1.0.0",
        "passport-local-mongoose": "^5.0.1",
        "pug": "^2.0.4",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.5.5",
        "@babel/core": "^7.5.5",
        "@babel/plugin-proposal-class-properties": "^7.5.5",
        "@babel/plugin-proposal-numeric-separator": "^7.2.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
        "@babel/preset-env": "^7.5.5",
        "@babel/preset-typescript": "^7.3.3",
        "@fortawesome/fontawesome-free": "^5.10.2",
        "@types/autoprefixer": "^9.6.1",
        "@types/body-parser": "^1.17.1",
        "@types/connect-ensure-login": "^0.1.5",
        "@types/connect-mongo": "0.0.43",
        "@types/dom-mediacapture-record": "^1.0.1",
        "@types/dotenv": "^6.1.1",
        "@types/errorhandler": "0.0.32",
        "@types/express": "^4.17.1",
        "@types/express-session": "^1.15.14",
        "@types/helmet": "0.0.43",
        "@types/mini-css-extract-plugin": "^0.8.0",
        "@types/mongoose": "^5.5.13",
        "@types/morgan": "^1.7.37",
        "@types/multer": "^1.3.9",
        "@types/node": "^12.7.2",
        "@types/passport": "^1.0.1",
        "@types/passport-github": "^1.1.5",
        "@types/passport-google-oauth20": "^2.0.2",
        "@types/passport-local": "^1.0.33",
        "@types/passport-local-mongoose": "^4.0.12",
        "@types/shelljs": "^0.8.5",
        "@types/video.js": "^7.2.14",
        "@types/webpack": "^4.39.1",
        "@types/winston": "^2.4.4",
        "autoprefixer": "^9.6.1",
        "axios": "^0.19.0",
        "babel-loader": "^8.0.6",
        "css-loader": "^3.2.0",
        "file-loader": "^4.2.0",
