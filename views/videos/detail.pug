extends ../layout

block content
    .video-detail
        .video-detail__player
            video.video-js.vjs-big-play-centered(controls, preload="auto", data-setup="{}")
                source(src=video.src)
                p.vjs-no-js
                    |To view this video please enable JavaScript, and consider upgrading to a web browser that
                    a(href="https://videojs.com/html5-video-support/", target="_blank")
                        |supports HTML5 video
        .video-detail__info
            a(href=(routes.videos + routes.editVideo(video.id)))
                button Edit video
            h5.video-detail__title=video.title
            p.video-detail__description !{video.description.replace(/\n/g, "<br/>")}
            if video.views === 1
                span.video-detail__views 1 view
            else
                span.video-detail__views #{video.views} views
        .video-detail__comments
            if video.comments.length === 1
                span.video-detail__comment-number 1 comment
            else
                span.video-detail__comment-number #{video.comments.length} comments